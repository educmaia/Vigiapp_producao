# Arquivo de exemplo para variáveis de ambiente
# Copie este arquivo para .env e preencha com os valores reais

# Configurações do PostgreSQL
DATABASE_URL=postgresql://usuario:senha@host:porta/banco
PGUSER=usuario
PGPASSWORD=senha
PGHOST=host
PGPORT=5432
PGDATABASE=banco

# Configurações de email
MAILERSEND_API_KEY=sua_chave_api_mailersend
SENDGRID_API_KEY=sua_chave_api_sendgrid
GMAIL_PASSWORD=sua_senha_gmail

# Segurança
SECRET_KEY=chave_secreta_para_sessoes

# Configuração do serviço de SMS (opcional)
TWILIO_ACCOUNT_SID=seu_account_sid
TWILIO_AUTH_TOKEN=seu_auth_token
TWILIO_PHONE_NUMBER=seu_numero_telefone